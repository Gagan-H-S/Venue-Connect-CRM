{
  "openapi": "3.0.0",
  "info": {
    "title": "Payment API",
    "version": "1.0.0",
    "description": "Dummy Payment Gateway API for Event Venue CRM integration"
  },
  "servers": [
    { "url": "https://api.testpayment.com" }
  ],
  "paths": {
    "/payments": {
      "post": {
        "summary": "Create a payment",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "bookingId": { "type": "string" },
                  "amount": { "type": "number" },
                  "currency": { "type": "string" }
                },
                "required": ["bookingId", "amount", "currency"]
              }
            }
          }
        },
        "responses": {
          "200": { "description": "Payment created successfully" },
          "400": { "description": "Invalid request" }
        }
      }
    }
  }
}
